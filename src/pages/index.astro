---
import '../styles/main.css'

const heading = "Scripture Golf";
const subheading = "Scripture Golf is a classic LDS Sunday School trivia game.";
const appIcon = "/images/app-icon.svg";
const appScreenshot = "/images/app-screenshot.png";
// const footerImage = "/images/banners.svg";
const badges = [
	{
		link: "https://itunes.apple.com/us/app/lds-scripture-golf/id1186113597",
		image: "/images/app-store-badge.svg"
	},
	{
		link: "https://play.google.com/store/apps/details?id=com.ionicframework.scripturegolf455436",
		image: "/images/google-play-badge.png"
	},
];
const authors = [
	{
		name: "John Woodruff",
		url: "https://johnbwoodruff.com"
	}
];
const pageTitle = "Scripture Golf"
const favicon = "/images/favicon.svg"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={favicon} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<div class="container">
			<main>
				<div class="text-container">
					<img src={appIcon} class="app-icon">
					<h1 class="heading">{heading}</h1>
					<h2 class="subheading">{subheading}</h2>
					<div class="badge-container">
						{badges.map(badge => (
							<div>
								<a href={badge.link} target="_blank">
									<img src={badge.image} class="badge" />
								</a>
							</div>
						))}
					</div>
          <a class="app-link" href="/privacy-policy">Privacy Policy</a>
					<p class="authors">Made with &#x2665; by
						{authors.map((author, index) => (
								<span>
									{index > 0 ? (index === authors.length - 1 ? ' and ' : ', ') : ''}
									<a href={author.url} target="_blank">{author.name}</a>
								</span>
						))}
					</p>
				</div>
				<div>
					<img src={appScreenshot} class="app-screenshot">
				</div>
			</main>
		</div>
	</body>
</html>
